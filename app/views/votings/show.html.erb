<h1><%= @voting.title %></h1>

<p>
  <strong> <%= t('description') %> :</strong>
  <%= @voting.description %>
</p>

<p>
  <strong><%= t('status') %>:</strong>
  <%= @voting.status %>
</p>

<%= secret_voting_alert(@voting) %>

<% if @voting.finished? %>
  <h2><%= t('results') %></h2>

  <% @voting.questions.each do |question| %>
    <%= render 'question_results', question: question %>
  <% end %>
<% end %>

<h2> <%= t('participation') %> </h2>
<h3><%= t('votes_submitted') %></h3>
<%= groups_with_vote_submitted(@voting) %>

<h3><%= t('pending_votes') %></h3>
<%= groups_without_vote_submitted(@voting) %>

<h2><%= t('links') %></h2>

<%= link_to t('edit'), edit_voting_path(@voting) %> |
<%= link_to t('back'), votings_path %> | 
<%= link_to t('questions'), voting_questions_path(@voting) %>
